<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_advance_permissions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_hint_extra_light" />

    <TextView
        style="@style/bold_body_when_heading_is_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="start"
        android:paddingHorizontal="12dp"
        android:text="Add, edit &amp; follow up Clients" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            style="@style/body_when_heading_is_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:buttonTint="@color/app_theme_color"
            android:gravity="start|center"
            android:text="Don't allow" />

        <RadioButton
            style="@style/body_when_heading_is_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:buttonTint="@color/app_theme_color"
            android:gravity="start|center"
            android:text="Allow adding, editing &amp; follow up clients" />

    </RadioGroup>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/text_hint_extra_light" />

    <TextView
        style="@style/bold_body_when_heading_is_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="start"
        android:paddingHorizontal="12dp"
        android:text="Delete clients" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            style="@style/body_when_heading_is_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:buttonTint="@color/app_theme_color"
            android:gravity="start|center"
            android:text="Don't allow" />

        <RadioButton
            style="@style/body_when_heading_is_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:buttonTint="@color/app_theme_color"
            android:gravity="start|center"
            android:text="Allow this member to delete clients" />

    </RadioGroup>

    <EditText
        android:id="@+id/et_last"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="160dp" />

</androidx.appcompat.widget.LinearLayoutCompat>