<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/background_0">

    <ImageView
        android:id="@+id/iv_start_line"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/text_hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iv_dot"
        app:layout_constraintStart_toStartOf="@id/iv_dot"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_dot"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/app_theme_color"
        android:padding="6dp"
        android:src="@drawable/icon_whatsapp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/background_0" />

    <TextView
        android:id="@+id/tv_Date"
        style="@style/body_when_heading_is_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:gravity="start"
        android:text="Today"
        android:textColor="@color/text_body"
        app:layout_constraintBottom_toBottomOf="@id/iv_dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_dot"
        app:layout_constraintTop_toTopOf="@id/iv_dot" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="3dp"
        android:gravity="start"
        android:text="Client Added To App"
        android:textColor="@color/text_heading"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_dot"
        app:layout_constraintTop_toBottomOf="@id/tv_Date" />

    <TextView
        android:id="@+id/tv_detail"
        style="@style/body_when_heading_is_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="6dp"
        android:gravity="start"
        android:text="Ajj meeting hui thi"
        android:textColor="@color/text_hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_dot"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

</androidx.constraintlayout.widget.ConstraintLayout>