<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottomsheet_background"
    android:backgroundTint="@color/background_0"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="6dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_4"
        android:backgroundTint="@color/background_1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_add_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="1dp"
        android:background="@color/background_0"
        android:clipToPadding="false"
        android:paddingVertical="6dp"
        android:tag="note"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_note"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/app_theme_color" />

        <TextView
            android:id="@+id/tv_note"
            style="@style/body"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:gravity="bottom|start"
            android:text="Add Note"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_note"
            app:layout_constraintTop_toTopOf="@id/iv_note" />

        <TextView
            android:id="@+id/tv_note_detail"
            style="@style/small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="12dp"
            android:gravity="top|start"
            android:text="Add an updated followup of this client"
            android:textColor="@color/text_hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_note"
            app:layout_constraintTop_toBottomOf="@id/tv_note" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_add_whatsapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="1dp"
        android:background="@color/background_0"
        android:clipToPadding="false"
        android:paddingVertical="6dp"
        android:tag="whatsapp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_whatsapp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/app_theme_color" />

        <TextView
            android:id="@+id/tv_whatsapp"
            style="@style/body"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:gravity="bottom|start"
            android:text="Whatsapp Update"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_whatsapp"
            app:layout_constraintTop_toTopOf="@id/iv_whatsapp" />

        <TextView
            android:id="@+id/tv_whatsapp_detail"
            style="@style/small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="12dp"
            android:gravity="top|start"
            android:text="Update whenever you send something on whatsapp"
            android:textColor="@color/text_hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_whatsapp"
            app:layout_constraintTop_toBottomOf="@id/tv_whatsapp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_add_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="1dp"
        android:background="@color/background_0"
        android:clipToPadding="false"
        android:paddingVertical="6dp"
        android:tag="call"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_call"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/app_theme_color" />

        <TextView
            android:id="@+id/tv_call"
            style="@style/body"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:gravity="center|start"
            android:text="Call Update"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_call"
            app:layout_constraintTop_toTopOf="@id/iv_call" />

        <TextView
            android:id="@+id/tv_call_detail"
            style="@style/small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="12dp"
            android:gravity="top|start"
            android:text="Update whenever you call the client"
            android:textColor="@color/text_hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_call"
            app:layout_constraintTop_toBottomOf="@id/tv_call" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_add_visit_ready"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="1dp"
        android:background="@color/background_0"
        android:clipToPadding="false"
        android:paddingVertical="6dp"
        android:tag="ready"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_visit_ready"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/app_theme_color" />

        <TextView
            android:id="@+id/tv_visit_ready"
            style="@style/body"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:gravity="center|start"
            android:text="Ready For Visit"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_visit_ready"
            app:layout_constraintTop_toTopOf="@id/iv_visit_ready" />

        <TextView
            android:id="@+id/tv_visit_ready_detail"
            style="@style/small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="12dp"
            android:gravity="top|start"
            android:text="Update if client is ready for visit"
            android:textColor="@color/text_hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_visit_ready"
            app:layout_constraintTop_toBottomOf="@id/tv_visit_ready" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_add_visit_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/background_0"
        android:clipToPadding="false"
        android:paddingVertical="6dp"
        android:tag="done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_visit_done"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/app_theme_color" />

        <TextView
            android:id="@+id/tv_visit_done"
            style="@style/body"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:gravity="center|start"
            android:text="Visit Done"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_visit_done"
            app:layout_constraintTop_toTopOf="@id/iv_visit_done" />

        <TextView
            android:id="@+id/tv_visit_done_detail"
            style="@style/small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="12dp"
            android:gravity="top|start"
            android:text="Update if client has visited your property"
            android:textColor="@color/text_hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_visit_done"
            app:layout_constraintTop_toBottomOf="@id/tv_visit_done" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>