<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/background_0"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="6dp"
        android:padding="12dp"
        android:src="@drawable/img_left_arrow" />

    <ImageView
        android:id="@+id/iv_dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="6dp"
        android:padding="3dp"
        android:src="@drawable/img_property_junction_logo" />

    <TextView
        android:id="@+id/tv_back"
        style="@style/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="6dp"
        android:layout_weight="1"
        android:animateLayoutChanges="true"
        android:gravity="center|start"
        android:maxLines="1"
        android:text="Member name (12)"
        android:textColor="@color/text_heading"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="4dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="10dp"
        android:src="@drawable/img_more_dots"
        app:tint="@color/text_heading" />

</androidx.appcompat.widget.LinearLayoutCompat>